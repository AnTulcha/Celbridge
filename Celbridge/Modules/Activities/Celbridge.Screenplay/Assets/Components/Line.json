{
  "type": "object",
  "additionalProperties": false,

  "attributes": {
    "tags": [ "Screenplay" ],
    "allowMultipleComponents": true
  },

  "properties": {
    "_componentType": {
      "type": "string",
      "const": "Screenplay.Line#1"
    },
    "dialogueKey": {
      "type": "string"
    },
    "character": {
      "type": "string"
    },
    "sourceText": {
      "type": "string"
    },
    "contextNotes": {
      "type": "string"
    },
    "linePriority": {
      "type": "string"
    },
    "speakingTo": {
      "type": "string"
    },
    "gameArea": {
      "type": "string"
    },
    "timeConstraint": {
      "type": "string"
    },
    "direction": {
      "type": "string"
    },
    "platform": {
      "type": "string"
    },
    "productionStatus": {
      "type": "string"
    }
  },

  "required": [
    "_componentType",
    "dialogueKey",
    "character",
    "sourceText",
    "contextNotes",
    "linePriority",
    "speakingTo",
    "gameArea",
    "timeConstraint",
    "direction",
    "platform",
    "productionStatus"
  ],

  "prototype": {
    "dialogueKey": "",
    "character": "",
    "sourceText": "",
    "contextNotes": "",
    "linePriority": "",
    "speakingTo": "",
    "gameArea": "",
    "timeConstraint": "",
    "direction": "",
    "platform": "",
    "productionStatus": ""
  },

  "form": [
    {
      "element": "TextBox",
      "header": "Dialogue Key",
      "textBinding": "/dialogueKey"
    },
    {
      "element": "TextBox",
      "header": "Character",
      "textBinding": "/character"
    },
    {
      "element": "TextBox",
      "header": "Source Text",
      "textBinding": "/sourceText",
      "checkSpelling": true
    },
    {
      "element": "TextBox",
      "header": "Context Notes",
      "textBinding": "/contextNotes"
    },
    {
      "element": "TextBox",
      "header": "Line Priority",
      "textBinding": "/linePriority"
    },
    {
      "element": "TextBox",
      "header": "Speaking To",
      "textBinding": "/speakingTo"
    },
    {
      "element": "TextBox",
      "header": "Game Area",
      "textBinding": "/gameArea"
    },
    {
      "element": "TextBox",
      "header": "Time Constraint",
      "textBinding": "/timeConstraint"
    },
    {
      "element": "TextBox",
      "header": "Direction",
      "textBinding": "/direction"
    },
    {
      "element": "TextBox",
      "header": "Platform",
      "textBinding": "/platform"
    },
    {
      "element": "TextBox",
      "header": "Production Status",
      "textBinding": "/productionStatus"
    }
  ]
}
