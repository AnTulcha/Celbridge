{
  "type": "object",
  "additionalProperties": false,

  "attributes": {
    "rootActivity": "ScreenplayActivity"
  },

  "properties": {
    "_componentType": {
      "type": "string",
      "const": "Screenplay.Scene#1"
    },
    "sceneTitle": {
      "type": "string"
    },
    "sceneDescription": {
      "type": "string"
    }
  },

  "required": [
    "_componentType",
    "sceneTitle",
    "sceneDescription"
  ],

  "prototype": {
    "sceneTitle": "",
    "sceneDescription": ""
  },

  "form": [
    {
      "element": "TextBox",
      "header": "Scene Title",
      "textBinding": "/sceneTitle"
    },
    {
      "element": "TextBox",
      "header": "Scene Description",
      "textBinding": "/sceneDescription"
    }
  ]
}    
