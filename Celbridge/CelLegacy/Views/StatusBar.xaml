<UserControl
    x:Class="CelLegacy.Views.StatusBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:utils="using:CelLegacy.Utils"
    Background="{StaticResource PanelBackgroundABrush}"
    DataContext="{x:Bind ViewModel}">
    
    <UserControl.Resources>
        <utils:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>
    
    <Grid Grid.Row="1"
          Grid.Column="0"
          Grid.ColumnSpan="3"
          Background="{ThemeResource PanelBackgroundABrush}"
          BorderBrush="{StaticResource PanelBorderBrush}"
          BorderThickness="0 1 0 0">
        <SymbolIcon Symbol="Save" 
                    HorizontalAlignment="Right"
                    Margin="6 0 6 0"
                    Visibility="{x:Bind ViewModel.IsSaving, Mode=OneWay,Converter={StaticResource BoolToVisibilityConverter}}"/>
    </Grid>
</UserControl>
