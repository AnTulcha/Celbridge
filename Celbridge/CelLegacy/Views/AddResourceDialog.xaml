<ContentDialog
    x:Class="Celbridge.Legacy.Views.AddResourceDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Celbridge.Legacy.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Add Resource"
    PrimaryButtonText="Add Resource"
    CloseButtonText="Cancel"
    PrimaryButtonCommand="{x:Bind ViewModel.AddResourceCommand}"
    IsPrimaryButtonEnabled="{x:Bind ViewModel.CanAddResource, Mode=OneWay}"
    DataContext="{x:Bind ViewModel}">

    <StackPanel Spacing="6">
        <ComboBox Header="Resource Type" 
                  ItemsSource="{x:Bind ViewModel.ResourceTypeNames}"
                  SelectedIndex="{x:Bind ViewModel.SelectedTypeIndex, Mode=TwoWay}"/>
        <TextBox x:Name="ResourceName" 
                 Header="Resource name"
                 PlaceholderText="Enter resource name"
                 IsSpellCheckEnabled="False"
                 Text="{x:Bind ViewModel.ResourceName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
    </StackPanel>

</ContentDialog>
    