<UserControl
    x:Class="Celbridge.Legacy.Views.DocumentsPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    DataContext="{x:Bind ViewModel}">
    <Grid Background="{ThemeResource PanelBackgroundABrush}">
        <muxc:TabView x:Name="DocumentTabView"
                      IsAddTabButtonVisible="False" 
                      TabWidthMode="SizeToContent"
                      TabCloseRequested="DocumentTabView_TabCloseRequested"
                      VerticalAlignment="Stretch"
                      Background="{ThemeResource PanelBackgroundABrush}"/>
    </Grid>
</UserControl>
