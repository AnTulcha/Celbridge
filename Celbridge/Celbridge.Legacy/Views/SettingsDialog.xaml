<ContentDialog
    x:Class="Celbridge.Legacy.Views.SettingsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Celbridge.Legacy.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Settings"
    CloseButtonText="Close"
    DataContext="{x:Bind ViewModel}">

    <StackPanel VerticalAlignment="Stretch" 
                HorizontalAlignment="Stretch">
        <ComboBox Header="Theme" 
                  ItemsSource="{x:Bind ViewModel.ThemeValues}"
                  SelectedIndex="{x:Bind ViewModel.ThemeIndex, Mode=TwoWay}"
                  PlaceholderText="Application theme" Width="200"
                  Margin="6"/>

        <TextBox Header="Open AI Key"
                 Text="{x:Bind ViewModel.OpenAIKey, Mode=TwoWay}"
                 Margin="6"/>

        <TextBox Header="Google Sheets API Key"
                 Text="{x:Bind ViewModel.SheetsAPIKey, Mode=TwoWay}"
                 AcceptsReturn="True"
                 MinHeight="120" 
                 MaxHeight="120" 
                 Margin="6"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"/>
    </StackPanel>
</ContentDialog>
