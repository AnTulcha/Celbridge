<Project Sdk="Uno.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0;net8.0-maccatalyst;net8.0-windows10.0.22621;net8.0-desktop</TargetFrameworks>
    <UnoDisableVSWarnNetIsFirst>true</UnoDisableVSWarnNetIsFirst>
    <UnoSingleProject>true</UnoSingleProject>
    <OutputType>Library</OutputType>
    <GenerateLibraryLayout>true</GenerateLibraryLayout>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <UnoFeatures>
      CSharpMarkup;
      Lottie;
      Hosting;
      Toolkit;
      Logging;
      Mvvm;
      Configuration;
      Localization;
      ThemeService;
    </UnoFeatures>

  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" />
    <!-- .Net Interactive-->
    <PackageReference Include="Microsoft.DotNet.Interactive" />
    <PackageReference Include="Microsoft.DotNet.Interactive.CSharp" />
    <PackageReference Include="Microsoft.DotNet.Interactive.FSharp" />
    <PackageReference Include="Microsoft.DotNet.Interactive.PowerShell" />
    <PackageReference Include="Microsoft.DotNet.Interactive.Documents" />
    <PackageReference Include="Microsoft.DotNet.Interactive.Browser" />
    <!-- <PackageReference Include="Microsoft.DotNet.Interactive.Http" /> -->
    <PackageReference Include="Microsoft.DotNet.Interactive.PackageManagement" />
    <PackageReference Include="Microsoft.DotNet.Interactive.Formatting" />
    <PackageReference Include="Microsoft.CodeAnalysis.VisualBasic.Features" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\BaseLibrary\Celbridge.BaseLibrary.csproj" />
  </ItemGroup>

</Project>