<UserControl
    x:Class="Celbridge.Views.RightNavigationBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Background="{StaticResource PanelBackgroundABrush}"
    DataContext="{x:Bind ViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0"
                Command="{x:Bind ViewModel.ToggleInspectorCommand, Mode=OneWay}"
                ToolTipService.ToolTip="Inspector"
                ToolTipService.Placement="Left">
            <StackPanel Margin="-2 0 -2 0">
                <SymbolIcon Symbol="Document"/>
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
