<ContentDialog
    x:Class="Celbridge.Views.AddCelDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Celbridge.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Add Cel"
    PrimaryButtonText="Add Cel"
    CloseButtonText="Cancel"
    PrimaryButtonCommand="{x:Bind ViewModel.AddCelCommand}"
    IsPrimaryButtonEnabled="{x:Bind ViewModel.CanAddCel, Mode=OneWay}"
    DataContext="{x:Bind ViewModel}">

    <StackPanel Spacing="6">
        <ComboBox Header="Cel Type" 
                  ItemsSource="{x:Bind ViewModel.CelTypeNames}"
                  SelectedIndex="{x:Bind ViewModel.SelectedCelTypeIndex, Mode=TwoWay}"/>
        <TextBox x:Name="CelName" 
                 Header="Cel name"
                 PlaceholderText="Enter cel name"
                 IsSpellCheckEnabled="False"
                 Text="{x:Bind ViewModel.CelName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
    </StackPanel>

</ContentDialog>
    